#:kivy 1.10.1
#:import math math

<OverlappingImage>:
    keep_data: True

<LoopingImage>:
    pos: self.x, self.y
    source: 'Images\\chars\\{}\\{}_idle_anim_f{}.png'.format(self.image_name, self.image_name, self.image_num)
    texture: self.texture

<Character>:
    image_state: "idle"
    source: 'Images\\chars\\{}\\{}_{}_anim_f{}.png'.format(self.image_name, self.image_name, self.image_state, self.image_num)
    width: self.DESIRED_WIDTH
    size_hint_y: None
    allow_stretch: True
    keep_ratio: True

<ImageCycleExample>:
    monsterImage: monster
    otherMonsterImage: otherMonster
    storeFloor: sFloor

    Floor:
        id: sFloor
        width: self.parent.width
        height: self.parent.height
        pos_hint: 0,0

    PlayerCharacter:
        id: monster
        center: self.parent.center
        pos_hint: 0, 0
        image_name: 'big_zombie'

    NonPlayerCharacter:
        id: otherMonster
        pos: self.x, self.y
        right: self.parent.width / 2
        top: (self.parent.height/ 2) + 0.2
        image_name: 'big_demon'