#:kivy 1.10.1
#:import math math

<AnimatedImage>:
    pos: self.x, self.y
    texture: self.texture
    source: 'Images\\chars\\{}\\{}_{}_anim_f{}.png'.format(self.image_name, self.image_name, self.image_state, self.image_num)

<ImageCycleExample>:
    monsterImage: monster
    otherMonsterImage: otherMonster
    storeFloor: sFloor

    Floor:
        id: sFloor
        width: self.parent.width
        height: self.parent.height
        pos_hint: 0,0

    AnimatedImage:
        id: monster
        center: self.parent.center
        pos_hint: 0, 0
        image_name: 'big_zombie'

    WalkingCharacter:
        id: otherMonster
        pos: self.x, self.y
        right: self.parent.width / 2
        top: (self.parent.height/ 2) + 0.2
        image_name: 'big_demon'